<!-- render people/new.html -->
<div class="row">
  <div class="col-sm">
    <%= form_with( model: [ resource ] , local: true, class: 'smart-form', html: { novalidate: 'novalidate' } ) do |form| %>
      <fieldset>

        <div class="row">
          <div class="col-sm">
            <%= collection_select( :pain_point, :action_result_id, dropdown, :id, :name, {:prompt =>'Which Action Result Location?'} ) %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm mr-sm-3">
            <%= delphi_text_field( form, { label: 'Job Name', name: :job_name} ) %>
          </div>
          <div class="col-sm">
            <%= delphi_text_field( form,{ label: 'Reference #', name: :symptom} ) %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm">
            <%= delphi_text_area(form, { label: 'Job Description', name: :impact} ) %>
          </div>
        </div>
      </fieldset>

      <footer>
        <%= submit_button( form, { buttonType: 'primary', icon: 'glyphicon-save'}) %>
      </footer>

    <% end %>`
  </div>
</div>
