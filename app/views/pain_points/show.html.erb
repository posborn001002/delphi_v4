<%= page_title() %>
  <%= render 'profile', resource: @resource %>
  <%= section_title title: 'Status Updates' %>
    <%= link_to 'New Update', new_pain_point_update_path( @resource ), class: 'btn btn-primary' %>
    <%= render partial: 'status_updates/status_update', collection: @resource.pain_point_updates.sort_by_date %>
<%= page_footer() %>
  <%= back_button( { path: pain_points_path, class: "left"  }) %>
  <%= edit_button( { path: edit_pain_point_path( @resource ), buttonType: 'primary', class: "right" } ) %>
<%= page_end() %>