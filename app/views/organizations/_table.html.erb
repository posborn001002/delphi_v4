<!-- render organizations/table.html -->
<div class="row">
  <div class="col table-responsive">

      <table class="table table-bordered table-striped table-condensed table-hover smart-form has-tickbox data-table">
        <thead>
        <tr>
          <th>
            <span class="left">organization</span>
            <span ><%= small_button( { path: :new_organization, class: 'right' } ) %></span>

          </th>
        </tr>
        </thead>
        <tbody>
        <% resource.each do |loop| %>
          <tr>
            <td class="full">
              <span class="name"><%= loop.name %></span>
              <span>
                <%= loop.city %>, <%= loop.state %>
                <%= loop.country %>
              </span>
              <span class="links">
                <%= link_to 'Show', loop %> |
                <%= link_to 'Edit', edit_organization_path(loop) %>|
                <%= link_to 'Destroy', loop, method: :delete, data: { confirm: 'Are you sure?' } %>
              </span>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</div>