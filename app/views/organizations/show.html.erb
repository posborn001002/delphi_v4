<% content_for :html_id, "extr-page" %>
<% content_for :body_class, "animated fadeInDown" %>
<% content_for :top_right do %>
  <span id="extr-page-header-space"> <span class="hidden-mobile hiddex-xs">Need an account?</span> <a href="register.html" class="btn btn-danger">Create account</a> </span>
<% end %>


<!-- MAIN CONTENT -->
<div id="content" class="container">

  <row
  <div class="col-sm-12">

    <%= link_to 'See All Organizations', organizations_path, class: 'btn btn-primary btn-lg' %>
    <div class="row">
      <h1><%= @organization.name %></h1>
      <hr>
      <p>
        <span><%= @organization.address1 %></span><br>
        <span><%= @organization.address2 %></span><br>
        <span><%= @organization.city %>, <%= @organization.state %><br><%= @organization.country %></span>

        <%= link_to 'Edit', edit_organization_path(@organization), class: 'btn btn-primary btn-lg' %>
      </p>
    </div>
    <div class="row">
      <%= render template: 'people/index' %>
    </div>>
  </div>
</div>