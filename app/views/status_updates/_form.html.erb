
<!-- render people/new.html -->
<div class="row">
  <div class="col">
    <%= form_with( model: [parent, resource] , local: true, class: 'smart-form', html: { novalidate: 'novalidate' } ) do |form| %>
      <fieldset>

        <%= hidden_field( :status_update, :job_order_type, value: @status_update.job_order_type ) %>
        <%= hidden_field( :status_update, :job_order_id, value: @status_update.job_order_id ) %>

        <div class="row">
          <div class="col-sm">
            By Paul Osborn
          </div>
        </div>
        <div class="row">
          <div class="col-sm mr-sm-3">
            <label class="input-label">Action-Result Stage</label>
            <div class="input">
              <%= collection_select( :status_update, :action_result_id, ActionResult.all, :id, :ar_number ) %>
            </div>
          </div>
          <div class="col-sm">
            <%= delphi_date_field( form, { label: 'Status Date', icon: 'fa fa-calendar', name: :date, value: Date.today.strftime( '%F' ) } ) %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm">
            <%= delphi_text_area( form, { label: 'Notes', icon: 'fa fa-sitemap', name: :text } ) %>
          </div>
        </div>


      <footer>
        <%= submit_button( form, { buttonType: 'primary', icon: 'glyphicon-save'}) %>
      </footer>

    <% end %>`

    <%= form_for @status_update  do |f| %>
      <%= f.file_field :attachment %>
    <% end %>
    </fieldset>

  </div>
</div>