<%= page_title( { title: 'Toe Tag' } ) %>
  <%= render 'table', resource: @resource, parent: @parent  %>
  <%= section_title title: 'Status Updates'  %>
    <%= link_to 'New Update', new_toe_tag_update_path( @resource ), class: 'btn btn-primary' %>
    <%= render partial: 'status_updates/status_update', collection: @resource.toe_tag_updates.sort_by_date %>
<%= page_footer() %>
  <%= back_button( { label: 'My Profile', path: workshop_toe_tags_path( @parent ), buttonType: 'primary', class: 'left' }) %>
  <%= edit_button( { path: edit_toe_tag_path( @resource ), buttonType: 'primary', class: 'right' } ) %>
<%= page_end() %>