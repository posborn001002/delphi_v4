

    <div class="row list-group-item"
         data-toggle="collapse"
         href="#collapse_<%= customer_job.id %>"
         role="button"
         aria-expanded="false"
         aria-controls="collapse_<%= customer_job.id %>">
      <div class="col-sm">
        <span class="name"><%= customer_job.job_name %></span>
        <span class="reference"><%= customer_job.ref_number %></span>
      </div>
    </div>
    <div id="collapse_<%= customer_job.id %>" class="row collapse" class="list-group-item">
      <div class="col-sm">
        <div class="row">
          <div class="col-sm">
            <%= link_to 'New Update', new_customer_job_customer_job_update_path( customer_job ), class: 'btn btn-primary' %>
