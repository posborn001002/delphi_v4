<p id="notice"><%= notice %></p>

<h1>Members of <%= link_to @organization.name, organization_path( @organization ) %></h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>Job title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.email %></td>
        <td><%= person.telephone %></td>
        <td><%= person.job_title %></td>
        <td><%= link_to 'Show', organization_person_path(@organization, person) %></td>
        <td><%= link_to 'Edit', edit_organization_person_path(@organization, person) %></td>
        <td><%= link_to 'Delete', [@organization, person], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
